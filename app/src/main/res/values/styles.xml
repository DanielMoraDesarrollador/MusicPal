<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StyleTituloListadoScroll">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">@color/fondoNaranja</item>
        <item name="android:textSize">@dimen/size_text_title_scrollers</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyleIconoRedSocal">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="StyleBotonBarraInferior">
        <item name="android:layout_width">@dimen/tamanio_botones_barra_inferior</item>
        <item name="android:layout_height">@dimen/tamanio_botones_barra_inferior</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="StyleBotonReproductorChico">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="StyleTextViewVistaPrevia">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:background">@drawable/shadow_gris</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/tamanio_texto_vista_previa</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="StyleImagenVistaPrevia">
        <item name="android:layout_width">@dimen/tamanio_imagen_vista_previa</item>
        <item name="android:layout_height">@dimen/tamanio_imagen_vista_previa</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="styleBotonesReproductor">
        <item name="android:layout_width">@dimen/tamanio_botones_reproductor</item>
        <item name="android:layout_height">@dimen/tamanio_botones_reproductor</item>
        <item name="android:padding">5dp</item>
        <item name="android:tint">@color/grisBlanco</item>
    </style>

    <style name="StyleTextoReproChico">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">false</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/grisBlanco</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="StyleTextoVistaPrevia">
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">false</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/fondoNaranjaTransparente</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/negro_posta</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

</resources>