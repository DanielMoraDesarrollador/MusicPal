<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    android:orientation="vertical"
    tools:context=".DetalleFragment">

    <ImageView
        android:id="@+id/id_imagen_vista_previa"
        style="@style/StyleImagenVistaPrevia" />

    <TextView
        android:id="@+id/id_nombre_artista"
        style="@style/StyleTextViewVistaPrevia" />

    <TextView
        android:id="@+id/id_nombre_album"
        style="@style/StyleTextViewVistaPrevia" />

    <TextView
        android:id="@+id/id_anio_album"
        style="@style/StyleTextViewVistaPrevia" />

    <TextView
        style="@style/StyleTituloListadoScroll"
        android:background="@color/gris"
        android:text="Lista de Canciones" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_canciones_id"
        android:layout_width="match_parent"
        android:layout_height="150dp"></android.support.v7.widget.RecyclerView>

</LinearLayout>