<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_container"
    android:layout_width="135dp"
    android:layout_height="210dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="15dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imagen_fragment_album"
        android:layout_width="@dimen/size_home_albums"
        android:layout_height="@dimen/size_home_albums" />

    <TextView
        android:id="@+id/titulo-fragment_album"
        android:layout_width="@dimen/size_home_albums"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.5dp"
        android:gravity="center"
        android:letterSpacing="-0.05"
        android:lines="2"
        android:textColor="@color/grisBlanco"
        android:textSize="@dimen/tamanio_titulo_cancion"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/titulo-fragment_artista"
        android:layout_width="@dimen/size_home_albums"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.5dp"
        android:gravity="center"

        android:letterSpacing="-0.05"
        android:textColor="@color/gris"
        android:textSize="@dimen/tamanio_titulo_cancion" />

</LinearLayout>