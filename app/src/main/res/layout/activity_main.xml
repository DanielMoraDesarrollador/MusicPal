<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:id="@+id/container_reproductor_grande_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/black"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menu_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/icono_menu_blanco_24dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="18"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_music_pal_prueba" />

            <ImageView
                android:id="@+id/search_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/icono_search_blanco_24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gris">

        </LinearLayout>

        <FrameLayout
            android:id="@+id/container_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:background="@drawable/fondo_negro_con_trama">

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gris">

        </LinearLayout>


        <FrameLayout
            android:id="@+id/contenedor_reproductor_chico"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.25"
            android:background="@color/negroposta">

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/fondoNaranja" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75"
            android:background="@color/negroposta"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:id="@+id/home_button"
                style="@style/StyleBotonBarraInferior"
                android:src="@drawable/icono_home_naranja_28dp" />

            <ImageView
                android:id="@+id/playlist_button"
                style="@style/StyleBotonBarraInferior"
                android:src="@drawable/icono_playlist" />

            <ImageView
                android:id="@+id/compartir_button"
                style="@style/StyleBotonBarraInferior"
                android:src="@drawable/icono_compartir_blanco_24dp" />

            <ImageView
                android:id="@+id/more_button"
                style="@style/StyleBotonBarraInferior"
                android:src="@drawable/icono_more_horiz_blanco_24dp" />

        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/navigation_view"
        app:headerLayout="@layout/header_navigation_view"
        app:itemIconTint="@color/blanco"
        app:itemTextColor="@color/blanco"
        app:menu="@menu/menu_navigation">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
