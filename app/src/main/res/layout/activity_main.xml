<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/perfil" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="18"
            android:scaleType="centerCrop"
            android:src="@drawable/logomusic3" />

        <ImageView
            android:id="@+id/search_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/icono_search_blanco_24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gris">

    </LinearLayout>

    <FrameLayout
        android:id="@+id/container_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.25"
        android:background="@drawable/fondo1">

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gris">

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorBarraAbajo"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/negro_reproductor"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/boton_rewind"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:background="@drawable/ic_fast_rewind"
                android:backgroundTint="@color/grisBlanco"
                android:elevation="10dp"
                android:padding="10dp" />

            <Button
                android:id="@+id/boton_play"
                style="@style/StyleBotonReproductor"
                android:background="@drawable/ic_play_circle"
                android:backgroundTint="@color/grisBlanco"
                android:elevation="10dp" />

            <Button
                android:id="@+id/boton_forward"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:background="@drawable/ic_fast_forward"
                android:backgroundTint="@color/grisBlanco"
                android:elevation="10dp"
                android:padding="10dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/negro_reproductor"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:text="Bitter Sweet Symphony"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="serif-monospace"
                android:text="The Verve"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="serif-monospace"
                android:text="Urban Hymns"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="italic" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/fondo2"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:background="@color/negroposta"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:id="@+id/home_button"
            style="@style/StyleBotonBarraInferior"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icono_home_naranja_28dp" />

        <ImageView
            android:id="@+id/playlist_button"
            style="@style/StyleBotonBarraInferior"
            android:src="@drawable/playlist_icon" />

        <ImageView
            android:id="@+id/explore_button"
            style="@style/StyleBotonBarraInferior"
            android:src="@drawable/icono_explore_blanco_24dp" />

        <ImageView
            android:id="@+id/more_button"
            style="@style/StyleBotonBarraInferior"
            android:src="@drawable/icono_more_horiz_blanco_24dp" />

    </LinearLayout>


</LinearLayout>
