<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/play_chico_celda_recycler_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/ic_play_circle"
            android:backgroundTint="@color/gris"
            android:gravity="center"
            android:padding="12dp"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/nombre_canciones_id_celda_recycler_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:gravity="center"
                android:letterSpacing="0.125"
                android:padding="1dp"
                android:textColor="@color/fondoNaranja"
                android:textStyle="italic"
                tools:text="nombre cancion"
                />

            <TextView
                android:id="@+id/id_nombre_album_celda_recycler_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="nombre album"
                android:textColor="@color/fondoNaranja"
                android:textStyle="italic" />
        </LinearLayout>

        <ImageView
            android:id="@+id/compartir_chico_celda_recycler_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/icono_compartir_blanco_24dp"
            android:backgroundTint="@color/gris"
            android:gravity="center"
            android:padding="12dp"
            android:scaleType="centerInside" />
    </LinearLayout>
</LinearLayout>