<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.musicpal.view.FragmentReproductor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_reproductor_playtype"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/fondo2"
            tools:text="Better Sweet Symphony"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/text_reproductor_playfrom"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="The Verve - Urban Hymns"
            android:textColor="@color/grisBlanco"/>

        <ImageView
            android:id="@+id/imagen_reproductor"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:src="@drawable/urbanhymns"
            android:layout_margin="5dp"
            android:elevation="12dp"
            />

        <TextView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button_back_reproductorGrande"
                style="@style/styleBotonesReproductor"
                android:layout_gravity="center"
                android:src="@drawable/ic_fast_rewind" />

            <ImageView
                android:id="@+id/button_play_reproductorGrande"
                style="@style/styleBotonesReproductor"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_play_circle" />

            <ImageView
                android:id="@+id/button_forward_reproductorGrande"
                style="@style/styleBotonesReproductor"
                android:layout_gravity="center"
                android:src="@drawable/ic_fast_forward" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
