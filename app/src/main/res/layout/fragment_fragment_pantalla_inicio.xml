<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_principal_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fondo1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_albumes_top"
            style="@style/StyleTituloListadoScroll"
            android:text="@string/albumesTop" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_albumes_top_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/text_artistas_top"
            style="@style/StyleTituloListadoScroll"
            android:text="@string/artistatop" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_artista_top_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/text_playlist_top"
            style="@style/StyleTituloListadoScroll"
            android:text="@string/playlistTop" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_playlist_top_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/text_tracksTop"
            style="@style/StyleTituloListadoScroll"
            android:text="@string/tracksTop" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_tracks_top_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</ScrollView>
